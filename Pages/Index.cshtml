@page
@model FieldLog.Pages.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<h1>FieldLog Dashboard</h1>

<div class="row g-3 mt-2">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Projects</h5>
                <p class="card-text display-6">@Model.ProjectCount</p>
                <a class="btn btn-primary" asp-page="/Projects/Index">Open Projects</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Daily Logs</h5>
                <p class="card-text display-6">@Model.LogCount</p>
                <p class="text-muted mb-2">Across all your projects</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Uploads</h5>
                <p class="card-text display-6">@Model.PhotoCount</p>
                <p class="text-muted mb-2">Photo links saved in logs</p>
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />

<h3>Recent Projects</h3>

@if (!Model.RecentProjects.Any())
{
<p>No projects yet. Create your first one.</p>
<a class="btn btn-primary" asp-page="/Projects/New">New Project</a>
}
else
{
<div class="list-group">
    @foreach (var p in Model.RecentProjects)
        {
    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
       asp-page="/Projects/Details" asp-route-id="@p.Id">
        <div>
            <div class="fw-bold">@p.Name</div>
            <div class="text-muted">@p.Location</div>
        </div>
        <span class="text-muted">@p.CreatedAt.LocalDateTime.ToString("yyyy-MM-dd")</span>
    </a>
        }
</div>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-page="/Projects/Index">View all projects</a>
    <a class="btn btn-primary" asp-page="/Projects/New">New project</a>
</div>
}

