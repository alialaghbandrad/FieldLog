@page "{id:guid}"
@model FieldLog.Pages.Projects.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<h1>Edit Project</h1>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Location"></label>
        <input class="form-control" asp-for="Location" />
        <span class="text-danger" asp-validation-for="Location"></span>
    </div>

    <!-- Keep id as hidden too (extra safety) -->
    <input type="hidden" asp-for="Id" />

    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-page="/Projects/Details" asp-route-id="@Model.Id">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
